{
    "C_Cpp.vcFormat.newLine.scopeBracesOnSeparateLines": true,
    "chat.commandCenter.enabled": false,
    "editor": {
        "acceptSuggestionOnEnter": "smart",
        "cursorSmoothCaretAnimation": "on",
        "experimental": {
            "treeSitterTelemetry": true,
        },
        "fontFamily": "'Fira Code','Droid Sans Mono', 'monospace', monospace",
        "fontLigatures": true,
        "fontSize": 20,
        "formatOnSave": true,
        "glyphMargin": false,
        "minimap": {
            "enabled": false
        },
        "smoothScrolling": false,
        "wordWrap": "on",
    },
    "errorLens": {
        "codeLensEnabled": true,
        "messageEnabled": false,
        "removeLinebreaks": false,
    },
    "git": {
        "blame": {
            "editorDecoration": {
                "enabled": false
            }
        },
        "diagnosticsCommitHook": {
            "Enabled": true
        },
        "openRepositoryInParentFolders": "always",
    },
    "ocaml": {
        "commands": {
            "typedHoles": {
                "constructAfterNavigate": true
            },
            "typeSelection": {
                "alwaysClearOutputChannel": true,
                "outputChannelResults": false,
            },
        },
        "server": {
            "duneDiagnostics": false,
        },
    },
    "security": {
        "workspace": {
            "trust": {
                "enabled": false,
                "startupPrompt": "never",
                "untrustedFiles": "open",
            }
        }
    },
    "telemetry": {
        "feedback.enabled": false,
        "telemetryLevel": "off",
    },
    "vim": {
        "foldfix": true,
        "handleKeys": {
            "<C-d>": true,
            "<C-u>": true,
            "<C-r>": true,
            "<C-v>": true,
            "<C-w>": true,
        },
        "highlightedyank": {
            "enable": true
        },
        "history": 1000,
        "leader": " ",
        "smartRelativeLine": true,
        "useCtrlKeys": false,
        "useSystemClipboard": true,
        // In Visual mode, start a search with `*` or `#` using the current selection.
        "visualstar": false,
    },
    "vscoq": {
        "completion": {
            "enable": false
        },
        "diagnostics": {
            "full": true
        },
        "goals": {
            "auto": true
        },
    },
    "window": {
        "commandCenter": false,
        "customMenuBarAltFocus": false,
        "customTitleBarVisibility": "never",
        "enableMenuBarMnemonics": false,
        "menuBarVisibility": "hidden",
        // "titleBarStyle": "native",
        "zoomLevel": 2,
    },
    "workbench": {
        "colorTheme": "Tokyo Night",
        "layoutControl": {
            "enabled": false
        },
    }
}